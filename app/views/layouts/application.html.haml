!!! 5
%html
%head
  %title Jobs Board
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "JOBS BOARD", root_path 
      %ul.nav.navbar-nav
        %li= link_to "All jobs", root_path
        - Category.all.each do |category|
          %li= link_to category.name, jobs_path(category: category.name)
      = link_to "Post a Job", new_job_path, class: "navbar-text navbar-right navbar-link"

  .container
    .col-lg-8.col-md-10.col-lg-offset-2.col-md-offset-1
      = yield
